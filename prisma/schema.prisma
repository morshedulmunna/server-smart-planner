// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String      @id @default(cuid())
  name           String
  email          String      @unique
  universityName String
  password       String
  event          Event[]
  todo           ClassTodo[]
  message        Message[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  photo       String[]
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model ClassTodo {
  id          String   @id @default(cuid())
  title       String
  description String
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Message {
  id       String   @id @default(cuid())
  message  String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  User     User?    @relation(fields: [userId], references: [id])
  userId   String?
}
